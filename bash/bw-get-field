# The purpose of this bash script is to create a function that is able to retrieve a custom item from a note stored in bitwarden
# Generated by ChatGPT

#!/bin/bash

item_name="$1"
field_name="$2"

if [ -z "$item_name" ] || [ -z "$field_name" ]; then
  echo "Usage: bw_get_field <item_name> <field_name>" >&2
  exit 1
fi

bw get item "$item_name" | jq -r --arg field_name "$field_name" '.fields[] | select(.name==$field_name) | .value'
